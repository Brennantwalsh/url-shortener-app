
  <h2>Update Links</h2>
  <%= form_tag "/links/#{@link.id}", method: :patch do %>
    <div>
      <%= label_tag :slug %>
      <%= text_field_tag :slug, @link.slug %>
    </div>
    <div>
      <%= label_tag :target_url %>
      <%= text_field_tag :target_url, @link.target_url %>
    </div>

    <%= submit_tag "Ediiiiiiiiit It" %>
  <% end %>