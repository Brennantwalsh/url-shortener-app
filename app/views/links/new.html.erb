<h2>Create a new link</h2>

<%= form_tag '/links', method: :post do %>
  <div>
    <%= label_tag :user_id %>
    <%= text_field_tag :user_id %>
  </div>
  <div>
    <%= label_tag :slug %>
    <%= text_field_tag :slug %>
  </div>
  <div>
    <%= label_tag :target_url %>
    <%= text_field_tag :target_url %>
  </div> 
  
  <%= submit_tag 'Create' %>
  <% end %>